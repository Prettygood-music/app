{
  "name": "pg-type-generator",
  "version": "1.0.0",
  "description": "Generate TypeScript types from PostgreSQL database schema",
  "main": "generate-types.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "generate": "ts-node generate-types.ts",
    "generate:advanced": "ts-node generate-types-advanced.ts",
    "generate:docker": "docker-compose -f ../../../docker-compose.yaml exec database ts-node /app/database/scripts/type-generator/generate-types.ts",
    "generate:advanced:docker": "docker-compose -f ../../../docker-compose.yaml exec database ts-node /app/database/scripts/type-generator/generate-types-advanced.ts"
  },
  "dependencies": {
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
